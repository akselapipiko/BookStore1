<section class="genre-icons">
    <a href="#" class="genre-icon" data-genre="All" title="All Genres">
        <div class="circle">🌐</div>
        <div class="label">All</div>
    </a>
    @foreach (var genre in genres)
    {
        var icon = genre switch
        {
            "Fantasy" => "🐉",
            "Romance" => "💕",
            "Science Fiction" => "🚀",
            "Mystery" => "🕵️",
            "Horror" => "👻",
            "History" => "📜",
            "Biography" => "🧑‍🎓",
            "Philosophy" => "🧠",
            _ => "📚"
        };
                    <a href="#" class="genre-icon" data-genre="@genre" title="@genre">
                        <div class="circle">@icon</div>
                        <div class="label">@genre</div>
                    </a>
    }
</section>

<div class="container mt-5">
    <div class="row d-flex flex-wrap justify-content-center" id="bookCardsContainer">
        @foreach (var book in Model.Books)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4 book-card" data-genre="@book.Genre" style="display: none;">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="@book.ImageUrl" alt="@book.Title" data-bs-toggle="tooltip" title="@book.Description" />
                    <div class="card-body">
                        <h5 class="card-title">@book.Title</h5>
                        <!-- Add Author below the title -->
                        <p class="card-text text-muted">@book.Author</p>
                    </div>
                    <div class="card-footer text-muted">
                        @book.Genre
                        <p class="card-text font-weight-bold">$@book.Price.ToString("0.00")</p>
                    </div>
                    <form method="post" asp-page="/Cart/AddToCart" class="text-center mt-3">
                        <input type="hidden" name="bookId" value="@book.Id" />
                        <button type="submit" class="btn btn-pink rounded-circle shadow-sm" title="Add to Cart" style="background-color: #ff69b4; border: none; width: 48px; height: 48px;">
                            <i class="fas fa-cart-plus text-white"></i>
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>

