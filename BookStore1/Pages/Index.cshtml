<script>
    document.addEventListener("DOMContentLoaded", function () {
        const genreButtons = document.querySelectorAll(".genre-icon");
        const cards = document.querySelectorAll(".book-card");

        function filterBooks(genre) {
            cards.forEach(card => {
                const cardGenre = card.getAttribute("data-genre");
                card.style.display = (genre === "All" || cardGenre === genre) ? "block" : "none";
            });

            // Highlight selected genre
            genreButtons.forEach(btn => btn.classList.remove("active"));
            document.querySelector(.genre-icon[data-genre="${genre}"])?.classList.add("active");
        }

        // Add click event to each icon
        genreButtons.forEach(button => {
            button.addEventListener("click", function (e) {
                e.preventDefault();
                const selectedGenre = this.getAttribute("data-genre");
                filterBooks(selectedGenre);
            });
        });

        // Show all books by default on load
        filterBooks("All");
    });
</script> 
